  <div id="home">
      <div class="map-container">
       <div id="map" style="width: 100%; height: 100%"></div>
      </div>
      <div class="form-container">


        <%= form_tag("/", method: "get") do %>
         <% PagesController::LYON_STOPS.each do |key, value| %>
              <li>
                <%= check_box_tag 'stop_ids[]', value %>
                <%= key %>
              </li>
          <% end %>
          <hr>
          <%= time_select 'start', {minute_step: 15} %>
          <br>
          <%= time_select 'end', {minute_step: 15} %>
          <%= submit_tag("C'est parti!") %>
        <% end %>

      </div>
  </div>

</div>



<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' }, provider: { styles: style } }, function() {
      markers = handler.addMarkers(<%= raw @markers.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
    });
  <% end %>
<% end %>

<hr>


